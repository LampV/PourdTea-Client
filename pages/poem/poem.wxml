<view class="container bg-white">
  <swiper class="padding" current-item-id="{{currentItemId}}">
    <swiper-item item-id="poem_content">
      <scroll-view scroll-y class="poem-scroll">
        <view class="cu-card case">
          <view class="cu-item shadow">
            <view class="justify-center flex" style="font-size:44rpx">
              <view>{{poem.title}}</view>
            </view>
            <view class="justify-center text-df color-orange flex margin-tb-sm" bindtap="swipeToAuthor">
              <view>[{{poem.author_dynasty}}]</view>
              <view class="margin-left-xs">{{poem.author_name}}</view>
            </view>
            <view class=" text-lg justify-center flex" wx:for="{{poem.sentences}}" wx:for-item="sentence" wx:key="{{sentence}}" style="letter-spacing: 2rpx;text-indent: 20rpx;line-height: 66rpx;color:#666666">
              {{sentence}}
            </view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item item-id="poem_author">
      <scroll-view scroll-y class="poem-scroll">
        <view class="cu-card case">
          <view class="cu-item shadow">
            <view class="justify-center flex color-orange margin-bottom-lg margin-top-df" style="font-size:44rpx">
              <view class="">{{poem.author_name}}</view>
              <view class="margin-lr-sm">Â·</view>
              <view class="">{{poem.author_dynasty}}</view>
            </view>

            <view class="text-grey text-lg margin-bottom" wx:for="{{poem.author_abstract_parags}}" wx:for-item="parag" wx:key="{{parag}}" style="letter-spacing: 2rpx;text-indent: 20rpx;line-height: 60rpx;">
              {{parag}}
            </view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>