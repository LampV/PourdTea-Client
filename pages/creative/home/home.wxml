<view class="container poemlist-scrollview">
  <view class="cu-bar cu-item bg-white fixed">
    <view class="avatar margin-left" style="font-size:44rpx" bindtap="showModal" data-target="DrawerModalL">
      <text class="cuIcon-list"></text>
    </view>
    <view class="content">
      <text>{{typeArray[curTypeIndex]}}</text>
    </view>
  </view>


  <infer></infer>
  <view class="cu-modal drawer-modal justify-start {{modalName=='DrawerModalL'?'show':''}}" bindtap="hideModal">
    <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
      <view class="cu-list menu text-left">
        <view class="cu-item arrow" wx:for="{{typeArray}}" style="{{curTypeIndex==index ? 'background-color:#cce6ff;' : ''}}" wx:key wx:for-item="type" wx:for-index="index" data-target="{{index}}" bind:tap="typeTap">
          <view class="content" data-target="{{index}}">
            <view data-target="{{index}}">{{type}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>

</view>